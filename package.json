{
  "name": "aicompany",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.node.json",
    "typecheck": "tsc -p tsconfig.node.json --noEmit",
    "proposal:test": "node dist/scripts/create-proposal.js",
    "heartbeat:run": "node dist/scripts/run-heartbeat.js",
    "worker:once": "node dist/scripts/run-worker-once.js",
    "stage:summary": "node dist/scripts/stage-summary.js",
    "dev": "next dev",
    "start": "next start",
    "build:web": "next build",
    "affinity:update": "node dist/scripts/update-affinity.js",
    "affinity:decay": "node dist/scripts/affinity-decay.js",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "echo \"Run checklist: tests/e2e/stage-ui.checklist.md\"",
    "test:all": "vitest run tests/unit tests/integration",
    "test:ci": "npm run build && npm run build:web && npm run test:all && npm run test:integration",
    "test:unit:ci": "vitest run tests/unit --reporter=default --reporter=junit --outputFile.junit=reports/unit-junit.xml --coverage.enabled",
    "test:integration:ci": "vitest run tests/integration --reporter=default --reporter=junit --outputFile.junit=reports/integration-junit.xml"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/react": "19.2.13",
    "typescript": "^5.9.2",
    "vitest": "^2.1.8",
    "@vitest/coverage-v8": "^2.1.9"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.57.4",
    "next": "^15.5.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  }
}
